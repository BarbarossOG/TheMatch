@{
    ViewData["Title"] = "Account Settings";
    Layout = "_Layout";
}

<!-- ==========Breadcrumb-Section========== -->
<section class="breadcrumb-area profile-bc-area">
    <div class="container">
        <div class="content">
            <h2 class="title extra-padding">
                Настройки
            </h2>
            <ul class="breadcrumb-list extra-padding">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
                <li>
                    Общее
                </li>
            </ul>
        </div>
    </div>
</section>
<!-- ==========Breadcrumb-Section========== -->


<!-- ========= Profile Section Start -->

<section class="user-setting-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-md-5">
                <div class="accordion" id="accordionExample">
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <button class="" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <div class="icon">
                                    <i class="fas fa-user"></i>
                                </div>
                                <span>My Profile</span>
                                <div class="t-icon">
                                    <i class="fas fa-plus"></i>
                                    <i class="fas fa-minus"></i>
                                </div>
                            </button>
                        </div>

                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                <ul class="links">
                                    <li>
                                        <a href="user-setting.html">Profile Info</a>
                                    </li>
                                    <li>
                                        <a href="user-notification.html">Notifications</a>
                                    </li>
                                    <li>
                                        <a href="user-friend-request.html">Friend Requests</a>
                                    </li>
                                    <li>
                                        <a href="user-badges.html">Badges</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingTwo">
                            <button class="collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                <div class="icon">
                                    <i class="fas fa-cogs"></i>
                                </div>
                                <span>
                                    Account
                                </span>
                                <div class="t-icon">
                                    <i class="fas fa-plus"></i>
                                    <i class="fas fa-minus"></i>
                                </div>
                            </button>
                        </div>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                            <div class="card-body">
                                <ul class="links">
                                    <li>
                                        <a href="user-account-info.html">Account Info</a>
                                    </li>
                                    <li>
                                        <a href="user-change-pass.html">Change Password</a>
                                    </li>
                                    <li>
                                        <a href="user-privicy-setting.html">Privacy Settings</a>
                                    </li>
                                    <li>
                                        <a href="user-verify-account.html">Verified account</a>
                                    </li>
                                    <li>
                                        <a href="user-close-account.html">Close Account</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="account-wrapper">
                    <div class="account-header">
                        <h3 class="title">General Settings</h3>
                        <p>Manage your account settings and preferences</p>
                    </div>
                    <div class="account-content">
                        <div class="setting-categories">
                            <div class="setting-category">
                                <div class="setting-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="setting-content">
                                    <h5 class="setting-title">Personal Information</h5>
                                    <p>Update your profile details and personal information</p>
                                    <a asp-controller="Account" asp-action="AccountInfo" class="custom-button">Manage</a>
                                </div>
                            </div>
                            <div class="setting-category">
                                <div class="setting-icon">
                                    <i class="fas fa-user-lock"></i>
                                </div>
                                <div class="setting-content">
                                    <h5 class="setting-title">Privacy & Security</h5>
                                    <p>Control your privacy settings and account security</p>
                                    <a asp-controller="Account" asp-action="PrivacySettings" class="custom-button">Manage</a>
                                </div>
                            </div>
                            <div class="setting-category">
                                <div class="setting-icon">
                                    <i class="fas fa-key"></i>
                                </div>
                                <div class="setting-content">
                                    <h5 class="setting-title">Password</h5>
                                    <p>Change your password and manage account access</p>
                                    <a asp-controller="Account" asp-action="ChangePassword" class="custom-button">Manage</a>
                                </div>
                            </div>
                            <div class="setting-category">
                                <div class="setting-icon">
                                    <i class="fas fa-bell"></i>
                                </div>
                                <div class="setting-content">
                                    <h5 class="setting-title">Notifications</h5>
                                    <p>Set your notification preferences and alerts</p>
                                    <a asp-controller="Account" asp-action="Notification" class="custom-button">Manage</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ========= Profile Section Start -->