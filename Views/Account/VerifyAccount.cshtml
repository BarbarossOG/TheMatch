@{
    ViewData["Title"] = "Verify Account";
    Layout = "_Layout";
}

<!-- ==========Banner-Section========== -->
<section class="banner-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-6">
                <div class="banner-content">
                    <h1 class="title">Verify Account</h1>
                    <div class="breadcrumb-area">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item"><a asp-controller="Account" asp-action="Settings">Settings</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Verify Account</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Banner-Section========== -->

<!-- ==========Privacy-Settings========== -->
<section class="account-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="account-sidebar">
                    <div class="account-sidebar-header">
                        <div class="thumb">
                            <img src="~/images/account/user.png" alt="account">
                        </div>
                        <div class="content">
                            <h5 class="title">Welcome, John Doe</h5>
                            <span>Last login: 10 hours ago</span>
                        </div>
                    </div>
                    <ul class="account-sidebar-menu">
                        <li>
                            <a asp-controller="Account" asp-action="Settings"><i class="fas fa-cog"></i> Settings</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="AccountInfo"><i class="fas fa-user"></i> Account Info</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="PrivacySettings"><i class="fas fa-user-lock"></i> Privacy Settings</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="ChangePassword"><i class="fas fa-key"></i> Change Password</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="VerifyAccount" class="active"><i class="fas fa-user-check"></i> Verify Account</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Notification"><i class="fas fa-bell"></i> Notifications</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Badges"><i class="fas fa-medal"></i> Badges</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="FriendRequest"><i class="fas fa-user-plus"></i> Friend Requests</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Billing"><i class="fas fa-file-invoice-dollar"></i> Billing Info</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Plan"><i class="fas fa-gem"></i> Membership Plan</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Purchase"><i class="fas fa-shopping-cart"></i> Purchase History</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="CloseAccount"><i class="fas fa-user-slash"></i> Close Account</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="account-wrapper">
                    <div class="account-header">
                        <h3 class="title">Verify Your Account</h3>
                        <p>Complete your verification to access all features of TheMatch</p>
                    </div>
                    <div class="account-content">
                        <div class="verify-account-wrapper">
                            <div class="verify-account-step complete">
                                <div class="step-header">
                                    <h5>Step 1: Email Verification</h5>
                                    <span class="status text-success">Completed</span>
                                </div>
                                <div class="step-content">
                                    <p>Your email has been successfully verified.</p>
                                </div>
                            </div>
                            <div class="verify-account-step current">
                                <div class="step-header">
                                    <h5>Step 2: Phone Verification</h5>
                                    <span class="status text-warning">Pending</span>
                                </div>
                                <div class="step-content">
                                    <p>Please verify your phone number to increase your account security.</p>
                                    <form class="verification-form">
                                        <div class="form-group">
                                            <label for="phone">Phone Number</label>
                                            <input type="tel" id="phone" class="form-control" placeholder="+1 (___) ___-____">
                                        </div>
                                        <button type="submit" class="custom-button">Send Verification Code</button>
                                    </form>
                                </div>
                            </div>
                            <div class="verify-account-step">
                                <div class="step-header">
                                    <h5>Step 3: ID Verification</h5>
                                    <span class="status text-muted">Not Started</span>
                                </div>
                                <div class="step-content">
                                    <p>This step is optional but recommended. Verify your identity to earn a verification badge.</p>
                                    <button class="custom-button disabled">Start ID Verification</button>
                                    <small class="text-muted d-block mt-2">Complete phone verification first</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Privacy-Settings========== --> 