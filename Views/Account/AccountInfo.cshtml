@{
    ViewData["Title"] = "Account Information";
    Layout = "_Layout";
}

<!-- ==========Banner-Section========== -->
<section class="banner-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-6">
                <div class="banner-content">
                    <h1 class="title">Account Information</h1>
                    <div class="breadcrumb-area">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item"><a asp-controller="Account" asp-action="Settings">Settings</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Account Info</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Banner-Section========== -->

<!-- ==========Account-Info========== -->
<section class="account-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="account-sidebar">
                    <div class="account-sidebar-header">
                        <div class="thumb">
                            <img src="~/images/account/user.png" alt="account">
                        </div>
                        <div class="content">
                            <h5 class="title">Welcome, John Doe</h5>
                            <span>Last login: 10 hours ago</span>
                        </div>
                    </div>
                    <ul class="account-sidebar-menu">
                        <li>
                            <a asp-controller="Account" asp-action="Settings"><i class="fas fa-cog"></i> Settings</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="AccountInfo" class="active"><i class="fas fa-user"></i> Account Info</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="PrivacySettings"><i class="fas fa-user-lock"></i> Privacy Settings</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="ChangePassword"><i class="fas fa-key"></i> Change Password</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="VerifyAccount"><i class="fas fa-user-check"></i> Verify Account</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Notification"><i class="fas fa-bell"></i> Notifications</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Badges"><i class="fas fa-medal"></i> Badges</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="FriendRequest"><i class="fas fa-user-plus"></i> Friend Requests</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Billing"><i class="fas fa-file-invoice-dollar"></i> Billing Info</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Plan"><i class="fas fa-gem"></i> Membership Plan</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Purchase"><i class="fas fa-shopping-cart"></i> Purchase History</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="CloseAccount"><i class="fas fa-user-slash"></i> Close Account</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="account-wrapper">
                    <div class="account-header">
                        <h3 class="title">Your Profile Information</h3>
                        <p>Update your personal details and profile information</p>
                    </div>
                    <div class="account-content">
                        <form class="account-form">
                            <div class="form-group">
                                <label for="fullName">Full Name</label>
                                <input type="text" id="fullName" class="form-control" value="John Doe">
                            </div>
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text" id="username" class="form-control" value="johndoe" readonly>
                                <small class="form-text text-muted">Username cannot be changed</small>
                            </div>
                            <div class="form-group">
                                <label for="email">Email Address</label>
                                <input type="email" id="email" class="form-control" value="johndoe@example.com">
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone Number</label>
                                <input type="tel" id="phone" class="form-control" value="+1 (555) 123-4567">
                            </div>
                            <div class="form-group">
                                <label for="dob">Date of Birth</label>
                                <input type="date" id="dob" class="form-control" value="1990-01-15">
                            </div>
                            <div class="form-group">
                                <label>Gender</label>
                                <div class="gender-select">
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" id="male" name="gender" class="custom-control-input" checked>
                                        <label class="custom-control-label" for="male">Male</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" id="female" name="gender" class="custom-control-input">
                                        <label class="custom-control-label" for="female">Female</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" id="other" name="gender" class="custom-control-input">
                                        <label class="custom-control-label" for="other">Other</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="location">Location</label>
                                <input type="text" id="location" class="form-control" value="New York, USA">
                            </div>
                            <div class="form-group">
                                <label for="bio">About Me</label>
                                <textarea id="bio" class="form-control" rows="4">I am a software developer who enjoys hiking and photography on weekends. Looking for someone with similar interests.</textarea>
                            </div>
                            <div class="profile-photo-upload">
                                <h5>Profile Photo</h5>
                                <div class="upload-area">
                                    <div class="image-preview">
                                        <img src="~/images/account/user.png" alt="profile" id="imagePreview">
                                    </div>
                                    <div class="upload-actions">
                                        <input type="file" id="profileImage" class="d-none">
                                        <label for="profileImage" class="custom-button">Choose Image</label>
                                        <button type="button" class="custom-button remove-button">Remove</button>
                                    </div>
                                    <p class="upload-info">Recommended size: 300x300 pixels. Max file size: 2MB</p>
                                </div>
                            </div>
                            <div class="form-group mt-4">
                                <button type="submit" class="custom-button">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Account-Info========== --> 