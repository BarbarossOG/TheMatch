@{
    ViewData["Title"] = "Close Account";
    Layout = "_Layout";
}

<!-- ==========Banner-Section========== -->
<section class="banner-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-6">
                <div class="banner-content">
                    <h1 class="title">Close Account</h1>
                    <div class="breadcrumb-area">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item"><a asp-controller="Account" asp-action="Settings">Settings</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Close Account</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Banner-Section========== -->

<!-- ==========Close-Account-Section========== -->
<section class="account-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="account-sidebar">
                    <div class="account-sidebar-header">
                        <div class="thumb">
                            <img src="~/images/account/user.png" alt="account">
                        </div>
                        <div class="content">
                            <h5 class="title">Welcome, John Doe</h5>
                            <span>Last login: 10 hours ago</span>
                        </div>
                    </div>
                    <ul class="account-sidebar-menu">
                        <li>
                            <a asp-controller="Account" asp-action="Settings"><i class="fas fa-cog"></i> Settings</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="AccountInfo"><i class="fas fa-user"></i> Account Info</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="PrivacySettings"><i class="fas fa-user-lock"></i> Privacy Settings</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="ChangePassword"><i class="fas fa-key"></i> Change Password</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="VerifyAccount"><i class="fas fa-user-check"></i> Verify Account</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Notification"><i class="fas fa-bell"></i> Notifications</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Badges"><i class="fas fa-medal"></i> Badges</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="FriendRequest"><i class="fas fa-user-plus"></i> Friend Requests</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Billing"><i class="fas fa-file-invoice-dollar"></i> Billing Info</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Plan"><i class="fas fa-gem"></i> Membership Plan</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Purchase"><i class="fas fa-shopping-cart"></i> Purchase History</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="CloseAccount" class="active"><i class="fas fa-user-slash"></i> Close Account</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="account-wrapper">
                    <div class="account-header">
                        <h3 class="title">Close Your Account</h3>
                        <p>We're sorry to see you go. Please read the information below carefully.</p>
                    </div>
                    <div class="account-content">
                        <div class="close-account-warning">
                            <div class="warning-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div class="warning-content">
                                <h4>Warning: Account Closure is Permanent</h4>
                                <p>Once your account is closed, all your data will be permanently deleted and cannot be recovered. This includes:</p>
                                <ul>
                                    <li>Your profile information and photos</li>
                                    <li>Your matches and conversations</li>
                                    <li>Your membership and purchase history</li>
                                    <li>Any content you've shared in communities</li>
                                </ul>
                            </div>
                        </div>
                        <div class="close-account-alternatives mt-4">
                            <h4>Before You Go...</h4>
                            <p>Instead of closing your account, you might consider these alternatives:</p>
                            <div class="alternatives-list">
                                <div class="alternative-item">
                                    <div class="alternative-icon">
                                        <i class="fas fa-pause"></i>
                                    </div>
                                    <div class="alternative-content">
                                        <h5>Temporarily Deactivate</h5>
                                        <p>Hide your profile from others while preserving your data for when you return.</p>
                                        <a href="#" class="btn-link">Deactivate Instead</a>
                                    </div>
                                </div>
                                <div class="alternative-item">
                                    <div class="alternative-icon">
                                        <i class="fas fa-eye-slash"></i>
                                    </div>
                                    <div class="alternative-content">
                                        <h5>Adjust Privacy Settings</h5>
                                        <p>Control who can see your profile and contact you.</p>
                                        <a asp-controller="Account" asp-action="PrivacySettings" class="btn-link">Update Privacy</a>
                                    </div>
                                </div>
                                <div class="alternative-item">
                                    <div class="alternative-icon">
                                        <i class="fas fa-bell-slash"></i>
                                    </div>
                                    <div class="alternative-content">
                                        <h5>Mute Notifications</h5>
                                        <p>Take a break without missing anything when you return.</p>
                                        <a asp-controller="Account" asp-action="Notification" class="btn-link">Manage Notifications</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="close-account-form mt-4">
                            <h4>Still Want to Close Your Account?</h4>
                            <p>Please tell us why you're leaving so we can improve our service:</p>
                            <form>
                                <div class="form-group">
                                    <select class="form-control custom-select">
                                        <option value="">Select a reason</option>
                                        <option value="found_match">I found a match</option>
                                        <option value="taking_break">I'm taking a break from dating</option>
                                        <option value="not_satisfied">I'm not satisfied with the service</option>
                                        <option value="too_many_messages">I'm receiving too many unwanted messages</option>
                                        <option value="privacy_concerns">I have privacy concerns</option>
                                        <option value="other">Other reason</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" rows="3" placeholder="Additional feedback (optional)"></textarea>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="confirmClosure">
                                        <label class="custom-control-label" for="confirmClosure">I understand that this action is permanent and cannot be undone</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="custom-button danger-button">Permanently Close Account</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Close-Account-Section========== --> 