@{
    ViewData["Title"] = "Удаление аккаунта";
    Layout = "_Layout";
}

<!-- ==========Breadcrumb-Section========== -->
<section class="breadcrumb-area profile-bc-area">
    <div class="container">
        <div class="content">
            <h2 class="title extra-padding">
                Удаление аккаунта
            </h2>
            <ul class="breadcrumb-list extra-padding">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
                <li>
                    Удаление аккаунта
                </li>
            </ul>
        </div>
    </div>
</section>
<!-- ==========Breadcrumb-Section========== -->

<!-- ==========Close-Account-Section========== -->
<section class="user-setting-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-md-5">
                @await Html.PartialAsync("_AccountSidebar")
            </div>
            <div class="col-xl-8 col-md-7">
                <div class="account-wrapper">
                    <div class="account-header mb-4">
                        <h3 class="title">Удаление аккаунта</h3>
                        <p>Пожалуйста, укажите причину удаления аккаунта и подтвердите своё решение.</p>
                    </div>
                    <div class="close-account-form">
                        <form id="closeAccountForm">
                            <div class="form-group">
                                <label for="deleteReason">Причина удаления аккаунта</label>
                                <select class="form-control custom-select" id="deleteReason">
                                    <option value="">Выберите причину</option>
                                    <option value="found_match">Я нашёл(ла) пару</option>
                                    <option value="taking_break">Хочу сделать перерыв</option>
                                    <option value="not_satisfied">Не удовлетворён(а) сервисом</option>
                                    <option value="too_many_messages">Слишком много нежелательных сообщений</option>
                                    <option value="privacy_concerns">Беспокоит приватность</option>
                                    <option value="other">Другая причина</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="deleteDescription">Поясните подробнее (необязательно)</label>
                                <textarea class="form-control" id="deleteDescription" rows="3" placeholder="Ваш комментарий..."></textarea>
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="confirmClosure">
                                    <label class="custom-control-label" for="confirmClosure">Я подтверждаю, что понимаю: удаление аккаунта необратимо и все данные будут удалены навсегда</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="custom-button danger-button">Удалить аккаунт навсегда</button>
                            </div>
                        </form>
                        <!-- Всплывающее уведомление -->
                        <div id="closeAccountNotify" class="close-account-notify">В скором времени ваш аккаунт будет удалён</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Close-Account-Section========== -->

@section Scripts {
    <script src="~/js/closeaccount.js"></script>
} 