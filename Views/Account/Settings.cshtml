@{
    ViewData["Title"] = "Account Settings";
    Layout = "_Layout";
}

<!-- ==========Banner-Section========== -->
<section class="banner-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-6">
                <div class="banner-content">
                    <h1 class="title">Account Settings</h1>
                    <div class="breadcrumb-area">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Settings</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Banner-Section========== -->

<!-- ==========Settings-Section========== -->
<section class="account-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="account-sidebar">
                    <div class="account-sidebar-header">
                        <div class="thumb">
                            <img src="~/images/account/user.png" alt="account">
                        </div>
                        <div class="content">
                            <h5 class="title">Welcome, John Doe</h5>
                            <span>Last login: 10 hours ago</span>
                        </div>
                    </div>
                    <ul class="account-sidebar-menu">
                        <li>
                            <a asp-controller="Account" asp-action="Settings" class="active"><i class="fas fa-cog"></i> Settings</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="AccountInfo"><i class="fas fa-user"></i> Account Info</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="PrivacySettings"><i class="fas fa-user-lock"></i> Privacy Settings</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="ChangePassword"><i class="fas fa-key"></i> Change Password</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="VerifyAccount"><i class="fas fa-user-check"></i> Verify Account</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Notification"><i class="fas fa-bell"></i> Notifications</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Badges"><i class="fas fa-medal"></i> Badges</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="FriendRequest"><i class="fas fa-user-plus"></i> Friend Requests</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Billing"><i class="fas fa-file-invoice-dollar"></i> Billing Info</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Plan"><i class="fas fa-gem"></i> Membership Plan</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Purchase"><i class="fas fa-shopping-cart"></i> Purchase History</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="CloseAccount"><i class="fas fa-user-slash"></i> Close Account</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="account-wrapper">
                    <div class="account-header">
                        <h3 class="title">General Settings</h3>
                        <p>Manage your account settings and preferences</p>
                    </div>
                    <div class="account-content">
                        <div class="setting-categories">
                            <div class="setting-category">
                                <div class="setting-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="setting-content">
                                    <h5 class="setting-title">Personal Information</h5>
                                    <p>Update your profile details and personal information</p>
                                    <a asp-controller="Account" asp-action="AccountInfo" class="custom-button">Manage</a>
                                </div>
                            </div>
                            <div class="setting-category">
                                <div class="setting-icon">
                                    <i class="fas fa-user-lock"></i>
                                </div>
                                <div class="setting-content">
                                    <h5 class="setting-title">Privacy & Security</h5>
                                    <p>Control your privacy settings and account security</p>
                                    <a asp-controller="Account" asp-action="PrivacySettings" class="custom-button">Manage</a>
                                </div>
                            </div>
                            <div class="setting-category">
                                <div class="setting-icon">
                                    <i class="fas fa-key"></i>
                                </div>
                                <div class="setting-content">
                                    <h5 class="setting-title">Password</h5>
                                    <p>Change your password and manage account access</p>
                                    <a asp-controller="Account" asp-action="ChangePassword" class="custom-button">Manage</a>
                                </div>
                            </div>
                            <div class="setting-category">
                                <div class="setting-icon">
                                    <i class="fas fa-bell"></i>
                                </div>
                                <div class="setting-content">
                                    <h5 class="setting-title">Notifications</h5>
                                    <p>Set your notification preferences and alerts</p>
                                    <a asp-controller="Account" asp-action="Notification" class="custom-button">Manage</a>
                                </div>
                            </div>
                            <div class="setting-category">
                                <div class="setting-icon">
                                    <i class="fas fa-file-invoice-dollar"></i>
                                </div>
                                <div class="setting-content">
                                    <h5 class="setting-title">Billing & Payments</h5>
                                    <p>View and manage your billing information and payment methods</p>
                                    <a asp-controller="Account" asp-action="Billing" class="custom-button">Manage</a>
                                </div>
                            </div>
                            <div class="setting-category">
                                <div class="setting-icon">
                                    <i class="fas fa-gem"></i>
                                </div>
                                <div class="setting-content">
                                    <h5 class="setting-title">Membership Plan</h5>
                                    <p>View your current plan and explore premium options</p>
                                    <a asp-controller="Account" asp-action="Plan" class="custom-button">Manage</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Settings-Section========== --> 