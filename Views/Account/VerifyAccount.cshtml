@{
    ViewData["Title"] = "Верификация аккаунта";
    Layout = "_Layout";
}

<!-- ==========Breadcrumb-Section========== -->
<section class="breadcrumb-area profile-bc-area">
    <div class="container">
        <div class="content">
            <h2 class="title extra-padding">
                Верификация аккаунта
            </h2>
            <ul class="breadcrumb-list extra-padding">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
                <li>
                    Верификация
                </li>
            </ul>
        </div>
    </div>
</section>
<!-- ==========Breadcrumb-Section========== -->

<!-- ==========Verification-Section========== -->
<section class="user-setting-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-md-5">
                @await Html.PartialAsync("_AccountSidebar")
            </div>
            <div class="col-xl-8 col-md-7">
                <div class="account-wrapper">
                    <div class="account-header mb-3">
                        <h3 class="title">Верификация аккаунта</h3>
                    </div>
                    <div class="mb-4">
                        <div class="verify-section-title">Зачем нужна верификация?</div>
                        <div class="verify-section-desc">
                            Верификация профиля открывает доступ ко всем функциям TheMatch, повышает доверие к вашему аккаунту и обеспечивает дополнительную безопасность.
                        </div>
                        <ul class="verify-section-list">
                            <li>Доступ к расширенным возможностям платформы</li>
                            <li>Больше доверия со стороны других пользователей</li>
                            <li>Защита от мошенничества и фейковых аккаунтов</li>
                        </ul>
                        <div class="verify-section-title">Выберите удобный способ верификации:</div>
                    </div>
                    <div class="d-flex flex-column gap-4">
                        <div class="mb-4">
                            <span class="font-weight-bold text-dark">Госуслуги</span> — <span class="text-muted">быстро и удобно через ваш номер телефона. Мы запросим часть ваших данных и сравним ваше лицо с фото на документах и на фотографиях профиля.</span>
                        </div>
                        <button class="btn btn-verif mb-3 d-flex align-items-center justify-content-center" data-toggle="modal" data-target="#gosuslugiModal">
                            <img src="/images/gosuslugi.png" alt="Госуслуги" style="height:28px;width:28px;object-fit:contain;margin-right:10px;"> <span class="font-weight-bold">Войти через Госуслуги</span>
                        </button>
                        <div class="mb-4">
                            <span class="font-weight-bold text-dark">Telegram</span> — <span class="text-muted">наш сотрудник свяжется с вами для подтверждения личности по видеозвонку. Звонок займёт не больше минуты.</span>
                        </div>
                        <button class="btn btn-verif mb-3 d-flex align-items-center justify-content-center" data-toggle="modal" data-target="#telegramModal">
                            <i class="fab fa-telegram-plane mr-2"></i> <span class="font-weight-bold">Верификация через Telegram</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Модальное окно Госуслуги -->
<div class="modal fade" id="gosuslugiModal" tabindex="-1" role="dialog" aria-labelledby="gosuslugiModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="gosuslugiModalLabel">Вход через Госуслуги</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="gosuslugiForm">
          <div class="form-group">
            <label for="gosuslugiPhone">Телефон</label>
            <input type="tel" class="form-control" id="gosuslugiPhone" placeholder="Введите телефон">
          </div>
          <div class="form-group d-none" id="smsCodeGroup">
            <label for="gosuslugiCode">Код из SMS</label>
            <div class="d-flex align-items-center">
                <input type="text" class="form-control mr-2" id="gosuslugiCode" placeholder="Введите код">
                <span id="timer" class="text-muted small"></span>
            </div>
          </div>
          <button type="submit" class="btn btn-verif w-100" id="gosuslugiSendBtn">Получить код</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Модальное окно Telegram -->
<div class="modal fade" id="telegramModal" tabindex="-1" role="dialog" aria-labelledby="telegramModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="telegramModalLabel">Верификация через Telegram</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="telegramForm">
          <div class="form-group">
            <label for="telegramUsername">Ваш Telegram username</label>
            <input type="text" class="form-control" id="telegramUsername" placeholder="username">
          </div>
          <button type="submit" class="btn btn-verif w-100">Отправить</button>
        </form>
        <div id="telegramNotify" class="alert alert-info mt-3 d-none">
          Скоро вам позвонит наш сотрудник и попросит включить камеру, ожидайте!
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script src="~/js/verifyaccount.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/verifyaccount.css" />
} 