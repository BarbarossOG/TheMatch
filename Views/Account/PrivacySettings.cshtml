@{
    ViewData["Title"] = "Privacy Settings";
    Layout = "_Layout";
}

<!-- ==========Banner-Section========== -->
<section class="banner-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-6">
                <div class="banner-content">
                    <h1 class="title">Privacy Settings</h1>
                    <div class="breadcrumb-area">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item"><a asp-controller="Account" asp-action="Settings">Settings</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Privacy Settings</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Banner-Section========== -->

<!-- ==========Privacy-Settings========== -->
<section class="account-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="account-sidebar">
                    <div class="account-sidebar-header">
                        <div class="thumb">
                            <img src="~/images/account/user.png" alt="account">
                        </div>
                        <div class="content">
                            <h5 class="title">Welcome, John Doe</h5>
                            <span>Last login: 10 hours ago</span>
                        </div>
                    </div>
                    <ul class="account-sidebar-menu">
                        <li>
                            <a asp-controller="Account" asp-action="Settings"><i class="fas fa-cog"></i> Settings</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="AccountInfo"><i class="fas fa-user"></i> Account Info</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="PrivacySettings" class="active"><i class="fas fa-user-lock"></i> Privacy Settings</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="ChangePassword"><i class="fas fa-key"></i> Change Password</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="VerifyAccount"><i class="fas fa-user-check"></i> Verify Account</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Notification"><i class="fas fa-bell"></i> Notifications</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Badges"><i class="fas fa-medal"></i> Badges</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="FriendRequest"><i class="fas fa-user-plus"></i> Friend Requests</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Billing"><i class="fas fa-file-invoice-dollar"></i> Billing Info</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Plan"><i class="fas fa-gem"></i> Membership Plan</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Purchase"><i class="fas fa-shopping-cart"></i> Purchase History</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="CloseAccount"><i class="fas fa-user-slash"></i> Close Account</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="account-wrapper">
                    <div class="account-header">
                        <h3 class="title">Privacy Settings</h3>
                        <p>Control who can see your information and how your data is used</p>
                    </div>
                    <div class="account-content">
                        <form class="privacy-settings-form">
                            <div class="privacy-section">
                                <h4 class="section-title">Profile Visibility</h4>
                                <div class="privacy-option">
                                    <div class="privacy-option-header">
                                        <h5>Who can see my profile</h5>
                                        <select class="form-control custom-select">
                                            <option value="everyone">Everyone</option>
                                            <option value="members">Members Only</option>
                                            <option value="connections">My Connections</option>
                                        </select>
                                    </div>
                                    <p class="privacy-description">Control who can view your full profile information</p>
                                </div>
                                <div class="privacy-option">
                                    <div class="privacy-option-header">
                                        <h5>Show my online status</h5>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="onlineStatus" checked>
                                            <label for="onlineStatus"></label>
                                        </div>
                                    </div>
                                    <p class="privacy-description">Allow others to see when you're online</p>
                                </div>
                                <div class="privacy-option">
                                    <div class="privacy-option-header">
                                        <h5>Show my location</h5>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="locationStatus" checked>
                                            <label for="locationStatus"></label>
                                        </div>
                                    </div>
                                    <p class="privacy-description">Display your general location on your profile</p>
                                </div>
                            </div>
                            <div class="privacy-section">
                                <h4 class="section-title">Communication Settings</h4>
                                <div class="privacy-option">
                                    <div class="privacy-option-header">
                                        <h5>Who can send me messages</h5>
                                        <select class="form-control custom-select">
                                            <option value="everyone">Everyone</option>
                                            <option value="connections">My Connections</option>
                                            <option value="nobody">Nobody</option>
                                        </select>
                                    </div>
                                    <p class="privacy-description">Control who can send you direct messages</p>
                                </div>
                                <div class="privacy-option">
                                    <div class="privacy-option-header">
                                        <h5>Who can send me connection requests</h5>
                                        <select class="form-control custom-select">
                                            <option value="everyone">Everyone</option>
                                            <option value="mutualConnections">People with mutual connections</option>
                                            <option value="nobody">Nobody</option>
                                        </select>
                                    </div>
                                    <p class="privacy-description">Control who can send you friend/connection requests</p>
                                </div>
                            </div>
                            <div class="privacy-section">
                                <h4 class="section-title">Data Settings</h4>
                                <div class="privacy-option">
                                    <div class="privacy-option-header">
                                        <h5>Activity tracking for personalization</h5>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="activityTracking" checked>
                                            <label for="activityTracking"></label>
                                        </div>
                                    </div>
                                    <p class="privacy-description">Allow us to use your activity to personalize your experience</p>
                                </div>
                                <div class="privacy-option">
                                    <div class="privacy-option-header">
                                        <h5>Share my data with partners</h5>
                                        <div class="toggle-switch">
                                            <input type="checkbox" id="dataSharing">
                                            <label for="dataSharing"></label>
                                        </div>
                                    </div>
                                    <p class="privacy-description">Allow sharing of non-personal data with our trusted partners</p>
                                </div>
                            </div>
                            <div class="form-group mt-4">
                                <button type="submit" class="custom-button">Save Settings</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Privacy-Settings========== --> 